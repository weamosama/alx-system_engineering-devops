#!/bin/bash

# Change IP address for localhost and facebook.com

# Check if the script is running in Docker
if [ -f /.dockerenv ]; then
    # Change localhost IP to 127.0.0.2
    sudo sed -i 's/127.0.0.1/127.0.0.2/g' /etc/hosts

    # Change facebook.com IP to 8.8.8.8
    sudo sed -i 's/157.240.11.35/8.8.8.8/g' /etc/hosts

    echo "IP addresses changed successfully."
else
    echo "This script is intended to run in Docker. Please read the provided documentation."
    exit 1
fi
